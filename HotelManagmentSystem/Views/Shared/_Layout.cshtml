<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title - Hotel Transylvania</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/ViewContent/img/favicon.png">
    <!-- Bootstrap core CSS -->
    <link href="~/Content/DashBoardContent/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Content/DashBoardContent/css/simple-sidebar.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

    <script src="~/Content/DashBoardContent/vendor/jquery/jquery.min.js"></script>

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading"><i class="fas fa-hotel mr-1"></i> HMS </div>
            <div class="list-group list-group-flush">


                <a href="@Url.Action("Index","tbl_room_type")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-home mr-1"></i>RoomType-Info</a>
                <a href="@Url.Action("Index","tbl_payment_type")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-cash-register mr-1"></i>PaymentType-Info</a>
                <a href="@Url.Action("Index","tbl_booking_status")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-building mr-1"></i> BookingStatus-Info</a>
               <a href="@Url.Action("Index","tbl_room")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-bed mr-1"></i>Room-Info</a>  
                <a href="@Url.Action("Index","tbl_booking")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-business-time mr-1"></i>Booking-Info</a>  
               <a href="@Url.Action("Index","tbl_Payment")" class="list-group-item list-group-item-action bg-light"><i class="far fa-money-bill-alt mr-1"></i>Payment-Info</a> 
                <a href="@Url.Action("Index","tbl_user_level")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-user-friends mr-1"></i>UserLevel-Info</a>
                <a href="@Url.Action("Index","tbl_user")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-users mr-1"></i>User-Info</a>
                <a href="@Url.Action("sendmail","Home")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-envelope mr-1"></i>Email</a>

            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">
                    <i class="fas fa-bars"></i>
                </button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("Login","Home")"><i class="fas fa-sign-out-alt mr-1"></i>LogOut</a>
                        </li>


                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()

            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>

    @*@using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()


        }*@
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/DashBoardContent/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/DashBoardContent/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    @RenderSection("scripts", required: false)
</body>

</html>
