@model IEnumerable<HotelManagmentSystem.Models.DB.tbl_room>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <div style="padding-top: 3px">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-secondary" })
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.room_number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.is_Active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbl_booking_status.booking_status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbl_room_type.room_name)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.room_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.is_Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_booking_status.booking_status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_room_type.room_name)
            </td>
           
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.room_id }, new { @class = "btn btn-outline-success" })
                @Html.ActionLink("Details", "Details", new { id = item.room_id }, new { @class = "btn btn-outline-warning" })
                @Html.ActionLink("Delete", "Delete", new { id = item.room_id }, new { @class = "btn btn-outline-danger" })
               

            </td>
        </tr>
    }
</table>
