@model IEnumerable<HotelManagmentSystem.Models.DB.tbl_booking_status>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    <div style="padding-top:3px">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-secondary" })
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.booking_status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.booking_status)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.booking_status_id }, new { @class = "btn btn-outline-success" })
                @Html.ActionLink("Details", "Details", new { id = item.booking_status_id }, new { @class = "btn btn-outline-warning" })
                @Html.ActionLink("Delete", "Delete", new { id = item.booking_status_id }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
    }

</table>
