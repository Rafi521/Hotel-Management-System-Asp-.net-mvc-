<table class="table">
    <tr>
        <th>Booking ID</th>
        <th>Customer Name</th>
        <th>Customer Address</th>
        <th>Customer Email</th>
        <th>Customer Phone No</th>
        <!-- Add other relevant booking details here -->
    </tr>
    <tr>
        <td>@Model.booking_id</td>
        <td>@Model.customer_name</td>
